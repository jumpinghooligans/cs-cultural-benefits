<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:textSize="30dp"
            android:padding="10dp"
            android:id="@+id/name"
            android:layout_gravity="center"
            android:background="@color/cs_blue_image"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="50dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Street Address"
            android:id="@+id/addressStreet"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/dark_gray"
            android:textStyle="italic"
            android:textSize="@dimen/medium_text"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="City, State Zip"
            android:id="@+id/addressCityStateZip"
            android:layout_marginLeft="10dp"
            android:textColor="@color/dark_gray"
            android:textStyle="italic"
            android:layout_gravity="left|center_vertical"
            android:textSize="@dimen/medium_text"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="555.555.5555"
            android:id="@+id/phone"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/subtitle"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="http://www.example.com"
            android:id="@+id/url"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/cs_blue_image"
            android:textStyle="italic"
            android:linksClickable="true"
            android:clickable="false"
            android:autoText="false"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Description"
            android:id="@+id/description"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            />

</LinearLayout><!-- From: C:\Users\Ryan\Documents\GitHub\cs-cultural-benefits\CSCulturalBenefits\src\main\res\layout\activity_institution_detail.xml -->